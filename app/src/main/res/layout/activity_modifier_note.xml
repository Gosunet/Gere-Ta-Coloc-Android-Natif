<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.example.geretacoloc.ModifierNote">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:id="@+id/modifyNote"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="38dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Titre"
        android:id="@+id/titreModNote"
        android:layout_below="@+id/modifyNote"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titre"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/modifyNote"
        android:layout_alignLeft="@+id/titreModNote"
        android:layout_alignStart="@+id/titreModNote"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Note"
        android:id="@+id/textView2"
        android:layout_below="@+id/titreModNote"
        android:layout_alignLeft="@+id/titreModNote"
        android:layout_alignStart="@+id/titreModNote"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/texteModNote"
        android:hint="Saisissez votre note"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/titreModNote"
        android:layout_alignStart="@+id/titreModNote"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_alignRight="@+id/modifyNote"
        android:layout_alignEnd="@+id/modifyNote" />

</RelativeLayout>
